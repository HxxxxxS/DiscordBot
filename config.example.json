{
    "discord": {
        "token":        "discord_token"
    },
    "lastfm":{
        "apikey":       "lastfm_api_key_here",
        "apisecret":    "lastfm_api_secret_here"
    },
    "warcraft_logs": {
            "apikey" : "warcraft_logs_api_key_here"
    },
    "commandPrefix":    "!",
    "commands": [
        {
            "cmd":      "help",
            "desc":     "Displays this message.",
            "callback": "Help"
        },
        {
            "cmd":      "define",
            "desc":     "Shows the Urban Dictionary definition of a word or phrase.",
            "callback": "Urban"
        },
        {
            "cmd":      "set_lastfm",
            "desc":     "Set your last.fm account. Required for np command.",
            "callback": "Lastfm",
            "syntax":   "set_lastfm nick"
        },
        {
            "cmd":      "np",
            "desc":     "Shows your currently playing track from last.fm.",
            "callback": "NowPlaying"
        },
        {
            "cmd":      "poll",
            "desc":     "Create a poll with emoji reactions as poll options.",
            "callback": "Poll",
            "syntax":   "poll Is this a cool feature? :thumbsup: :thumbsdown: "
        },
        {
            "cmd":      "roll",
            "desc":     "Roll a dice!",
            "callback": "Roll",
            "syntax":   "roll 6"
        },
        {
            "cmd":      "joke",
            "desc":     "Get a random dad joke.",
            "callback": "DadJoke"
        },
        {
            "cmd":      "ony",
            "desc":     "Display the next Onyxia reset (WoW Classic).",
            "callback": "OnyxiaReset"
        },
        {
            "cmd":      "set",
            "desc":     "Set a custom command for this Discord server.",
            "syntax":   "set foo bar",
            "callback": "CustomCmd"
        },
        {
            "cmd":      "remove",
            "desc":     "Remove a custom command for this Discord server.",
            "syntax":   "remove foo",
            "callback": "CustomCmd"
        },
        {
            "cmd": "log",
            "desc": "Links the most recent log posted to WarcraftLogs. Use !logs set to set Guild Name.",
            "callback": "Logs",
            "syntax": "logs [set] [classic|retail region realm Guild Name]"
        },
        {
            "cmd": "songflower",
            "desc": "Calculates upcoming songflower spawns.",
            "callback": "SongFlower",
            "syntax": "songflower [now|11:53]"
        }
    ]
}
